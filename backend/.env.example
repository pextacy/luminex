# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/luminex?schema=public"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=

# Somnia Blockchain Configuration
SOMNIA_RPC_URL="https://dream-rpc.somnia.network"
SOMNIA_CHAIN_ID=50311
SOMNIA_EXPLORER_URL="https://somnia-devnet.socialscan.io"

# Smart Contract Addresses
LUMINEX_VAULT_ADDRESS=0x0000000000000000000000000000000000000000

# SDS (Somnia Data Streams) Configuration
SDS_ENDPOINT="wss://sds.somnia.network"
SDS_API_KEY=your_sds_api_key_here

# Authentication & Security
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=24h
API_KEY_ADMIN=admin_api_key_change_in_production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
LOG_LEVEL=info
METRICS_ENABLED=true

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
